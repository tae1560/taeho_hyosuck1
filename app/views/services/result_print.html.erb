<style>

    div.print_container {
        width: 95%;
        margin: auto;
    }
    div.print_container div span {
        text-align: left;
        width: 100%;
        display: block;
        font-size: 1.1em;
    }
    div.print_container img {
        width: 100%;
    }
  div.print_container div {
        font-size: 0.6em;
      line-height: 1.0em;
	text-align: left;
      margin-bottom: 10px;
  }

  div.print_container div pre {
      background: none;
      border: none;
      display: inline;
  }

  div.print_container div.no_margin {
      margin: 0px;
  }

  .top_layout, .bottom_layout {
      display: none;
  }

        .mid_layout {
            width: 100%;
        }

        .start_margin {
            margin-top: 50px;
        }
</style>
<div class="print_container">
  <div class="start_margin"> </div>
  <div class="no_margin">
    <span><%= @processing.updated_at.in_time_zone("Seoul").time.strftime("%d-%m-%Y %p %I:%M") %> | SCAN <%= @processing.id %> | KOREAN 한국어판 | <%= @processing.name %></span>
  </div>
  <div>
    <span>MINDCAREKOREA.COM<span>
  </div>
  <div>
    <%= image_tag @result.image1.url %>
  </div>
  <div>
    <pre><%= @result.text1 %></pre>
  </div>

  <div class="page_break_after"></div>

  <div class="start_margin"> </div>
  <div class="no_margin">
    <span><%= @processing.updated_at.in_time_zone("Seoul").time.strftime("%d-%m-%Y %p %I:%M") %> | SCAN <%= @processing.id %> | KOREAN 한국어판 | <%= @processing.name %></span>
  </div>
  <div>
    <span>MINDCAREKOREA.COM<span>
  </div>
  <div>
    <%= image_tag @result.image2.url %>
  </div>

  <div>
    <pre><%= @result.text2 %></pre>
  </div>






</div>

<script>
    window.print();
</script>
